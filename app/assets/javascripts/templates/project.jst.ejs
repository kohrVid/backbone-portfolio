<div class="info">
  <form action="/users/<%= model.get("userId") %>/projects/<%= model.get("id") %>" accept-charset="UTF-8" data-remote="true" method="POST" class="project-view-form">
    <input name="_method" type="hidden" value="patch" />
    <input name="utf8" value="âœ“" type="hidden">
    <img src="<%= model.get("projectImageUrl") %> " width="350" height="165"
    alt="<%= model.get("title") %>" class="project-image shadowed editable" data-field-name="projectImageUrl" />
    <input type="text" placeholder="Image URL" class="hidden-edit" value="<%= model.get("projectImageUrl") %>" name="project[image_url]" data-field-name="projectImageUrl">

    <div class="project-details">
      <h3 class="project-name editable"><%= model.get("title") || "Click to add title" %></h3>
      <input type="text" placeholder="Title" class="hidden-edit" name="project[title]" value="<%= model.get("title") %>" data-field-name="title">

      <a href="<%= model.get("repoUrl")  %>" class="repoUrl editable"><%= model.get("repoUrl") || "Click to add URL" %></a>
      <input type="text" placeholder="Repo URL" class="hidden-edit" name="project[repo_url]" value="<%= model.get("repoUrl")  %>" data-field-name="repoUrl">

      <div class="body editable"><%= model.get("body") || "Click to add body" %></div>
      <input type="text" placeholder="Body" class="hidden-edit" name="project[body]" value="<%= model.get("body") %>" data-field-name="body">
  </form>

    <div class="remove-project">
      Remove Project
    </div>
    <div class="clear"></div>
  </div>
</div>
